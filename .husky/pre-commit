#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš§ Using eslint with prettier before your commit."

# Check ESLint Standards
bun run lint ||
(
  echo "âŒ Eslint has detected some errors. You must fix that."
  false;
)

# Format code
bun run format ||
{
  echo "âŒ You didn't format the code. Prettier going to work for you."
  false;
}

# Check if there are any changes after formatting
if [ -n "$(git diff)" ]; then
  echo "ğŸª„ Prettier has made formatting changes to your code."
  echo "ğŸ“ Current changes:"
  git status -s

  echo ""
  echo "â“ Do you want to add these formatting changes to your commit? (y/n)"
  read -r response

  if [[ "$response" =~ ^[Yy]$ ]]; then
    echo "âœ… Adding formatted files to commit..."
    git add .
  else
    echo "â­ï¸ Skipping formatting changes. You may need to format manually later."
  fi
fi

echo ""
echo "ğŸ‰ Your done!"
echo ""
